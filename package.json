        "@typescript-eslint/parser": "^5.27.0",
        "@web/dev-server": "^0.1.31",
        "@web/dev-server-esbuild": "^0.2.16",
        "@web/test-runner": "^0.13.29",
        "@web/test-runner-browserstack": "^0.5.0",
        "@web/test-runner-puppeteer": "^0.10.5",
        "eslint": "^8.17.0",
        "husky": "^7.0.4",
        "prettier-eslint": "^13.0.0",
        "sirv-cli": "^2.0.2",
        "tsup": "^5.12.9",
        "typescript": "^4.7.3"
