{
    "name": "@retronav/ixora",
    "version": "0.1.2",
    "description": "A CodeMirror 6 extension pack to make writing Markdown fun and beautiful.",
    "license": "Apache-2.0",
    "exports": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "publishConfig": {
        "access": "restricted"
    },
    "files": [
        "dist",
        "CHANGELOG.md"
    ],
    "scripts": {
